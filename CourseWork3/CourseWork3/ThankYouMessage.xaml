<Window x:Class="CourseWork3.ThankYouMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork3"
        mc:Ignorable="d"
        Title="ThankYouMessage" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Label Content="Thank You" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,30,0,0" FontWeight="Bold" Foreground="#333333" />

        <TextBox IsReadOnly="True" IsHitTestVisible="False" Background="#F0F0F0" x:Name="thankyouMessage" HorizontalAlignment="Center" Margin="10,80,10,0" TextWrapping="Wrap" Text="You are logged in" VerticalAlignment="Top" TextAlignment="Center" FontSize="16" Width="300" Height="30" BorderBrush="{x:Null}" />

    </Grid>
</Window>

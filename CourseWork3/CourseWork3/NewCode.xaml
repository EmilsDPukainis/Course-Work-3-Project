<Window x:Class="CourseWork3.NewCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork3"
        mc:Ignorable="d"
        Title="NewCode" Height="204" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Label Content="Your new code is:" VerticalAlignment="Top" FontSize="24" Margin="93,24,93,0" FontWeight="Bold" Foreground="#333333" />

        <TextBox   x:Name="NewCodeBox" Margin="163,71,163,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnlyCaretVisible="True" TextAlignment="Center" FontSize="20" Height="30" Text="0000" />

        <Button x:Name="Ok" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="120" Height="35" FontSize="20" Click="Ok_Click" />
    </Grid>
</Window>
